extends ./_configbase.pug


//- Template variables
block append vars
    - var $templateName = "queue"
    - var $templateClass = "queue"


//- Page styles
block append styles
    link(rel="stylesheet", href=`/css/${$templateName}.css`)/


//- Main Content
block append content
    include ./partials/queue/intro.pug
    include ./partials/queue/time-slices.pug
    include ./partials/queue/register-lightbox.pug

//- Page scripts
block append scripts
    script(src=`/js/${$templateName}.js`)